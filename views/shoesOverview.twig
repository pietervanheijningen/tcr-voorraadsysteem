{% extends "layout/main.twig" %}

{% block content %}
    <h2>Alle schoenen van {{ brand }}:</h2>
    <table class="table table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">Schoen naam</th>
            <th scope="col">Aantal</th>
            <th scope="col">Voorraad</th>
        </tr>
        </thead>
        <tbody>
        {% for shoe in shoes %}
            <tr>
                <td>{{ shoe.name }}</td>
                <td>{{ shoe.amount }}</td>
                <td><a href="#"><button type="button" class="btn btn-primary"><i class="fas fa-boxes"></i></button></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

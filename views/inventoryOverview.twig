{% extends "layout/main.twig" %}

{% block content %}
    <h2>Alle `{{ shoeName }}` schoenen van {{ brand }}:</h2>
    <table class="table table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">Artiekel nummer</th>
            <th scope="col">Maat</th>
            <th scope="col">Kleur</th>
            <th scope="col">Prijs</th>
            <th scope="col">Verkocht?</th>
            <th scope="col">Aanpassen</th>
        </tr>
        </thead>
        <tbody>
        {% for inventoryItem in inventoryItems %}
            <tr>
                <td>{{ inventoryItem.article_number }}</td>
                <td>{{ inventoryItem.size }}</td>
                <td>{{ inventoryItem.color }}</td>
                <td>{{ inventoryItem.price }}</td>
                <td>{{ inventoryItem.is_sold }}</td>
                <td>
                    <a href="#">
                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-boxes"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
